<!DOCTYPE html>
<html ng-app="myApp">
<head>

  <title>Pirate Portal</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap-theme.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css"> 
  <link rel="stylesheet" type="text/css" href="/stylesheets/style.css">


</head>
<body>
        <nav class="navbar navbar-inverse navbar-fixed-top">
          <div class="container-fluid" style="display: flex;">
            <div class="navbar-header">
              <a class="navbar-brand" href="/">Pirate Portal</a>
              <ul class="nav nav-pills pull-right">
                        <li role="presentation"><a href="/users/music">Music</a></li>
                        <li role="presentation"><a href="/users/videos">Videos</a></li>
                        <li role="presentation"><a href="/users/art">Art</a></li>
                      {{#if user}}
                        <li role="presentation"><a href="/users/dashboard">Dashboard</a></li>
                        <li role="presentation"><a href="/users/logout">Logout, {{user.username}}</a></li>
                      {{else}}
                        <li role="presentation"><a href="/users/login">Login</a></li>
                        <li role="presentation"><a href="/users/register">Register</a></li>
                      {{/if}}
                    </ul>
            </div>
          </div>
        </nav>

        <div class="row">
          <div class="col-lg-12">
            {{#if success_msg}}
              <div class="alert alert-success">{{success_msg}}</div>
              {{/if}}

              {{#if error_msg}}
              <div class="alert alert-danger">{{error_msg}}</div>
              {{/if}}

              {{#if error}}
              <div class="alert alert-danger">{{error}}</div>
              {{/if}}
         </div><!-- Ends the alert messages -->

         <div style="margin-top: 20px;" ng-controller="AppCtrl">
            {{{body}}}
         </div>

        <footer class="footer">
          <p>&copy; 2016 Pirate Portal</p>
        </footer>
  <!-- </div> --> <!-- /container -->

<script type="text/javascript" src="//api.filestackapi.com/filestack.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.12/angular.min.js"></script>
<script src="/controllers/controller.js"></script>
</body>
</html>
